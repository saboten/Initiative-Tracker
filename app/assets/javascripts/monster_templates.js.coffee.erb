$ ->
  $('#new_attack_button').click( (event) ->
    new_id = new Date().getTime();
    regexp = new RegExp("new_attack", "g")
    content = $('#new_attack_template').html();
    $('#new_attack_button').before(content.replace(regexp, new_id));
    event.preventDefault();
  );
  