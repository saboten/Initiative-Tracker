@import "mixins";

// Index page styles
ul.battle_list {
    width: 80%;
    margin-left: auto;
    margin-right: auto;
}
ul.battle_list li {
    margin-bottom: 15px;
}
ul.battle_list a {
    display: inline-block;
    text-align: center;
    height: 50px;
    line-height: 50px;
    font-size: 2em;
    vertical-align: top;
}
ul.battle_list a.edit_link {
    width: 90%;
    @include dark_round_button_left;
}
ul.battle_list a.delete_link {
    width: 9%;
    font-weight: bold;
    font-size: 3em;
    @include dark_round_button_right;
}
//Battle layout styles
div#left_column {
    position: fixed;
    top: 0px;
    bottom: 0px;
    left: 0px;
    width: 35%;
    background-color: rgba(30,30,30,0.7);
    overflow: auto;  
}
div#center_column {
    position: fixed;
    top: 0px;
    bottom: 0px;
    left: 35%;
    width: 55%;
    box-shadow: -5px 0px 4px #111;
    overflow: auto;
}
div#right_column {
    position: fixed;
    top: 0px;
    bottom: 0px;
    left: 90%;
    width: 10%;
}
div.editable_battle_name {
    font-size: 3em;
    font-weight: bold;
    color: #222;
    text-shadow: 0px 1px 1px #555;
    text-align: center;
}
.edit_battle_name input {
    font-size: 0.8em;
    margin-top: 5px;
    margin-bottom: 10px;
    margin-left: 10px;
    @include inset_input;
    text-align: center;
}
ul#battle_controls {
    text-align: center;
}
ul#battle_controls li {
    display: inline-block;
    text-align: center;
}
ul#battle_controls a {
    display: block;
    padding: 5px 10px;
    @include dark_round_button;
}

//Dice styles
div#dice_controls {
    margin-top: 15px;
    margin-bottom: 15px;
    width: 95%;
    margin-left: auto;
    margin-right: auto;
}
div#dice_controls input {
    width: 60%;
    height: 30px;
    margin-top: 5px;
    font-size: 1.5em;
    @include inset_input;
    vertical-align: middle;
}
a.dice_button {
    display: inline-block;
    height: 30px;
    width: 18%;
    line-height: 30px;
    vertical-align: middle;
    @include dark_round_button;
}
div#roll_container {
    position: absolute;
    top: 10px;
    bottom: 10px;
    right: 10px;
    left: 10px;
    @include inset_input;
}
ul#rolls {
    text-align: center;
}
ul#rolls li {
    font-size: 3em;
    font-weight: bold;
}

@mixin popup_box {
    background-image: url(<%= asset_path 'bg.png' %>);
    box-shadow: 3px 3px 3px #222;
    border: 1px solid #000;
}
//Add monsters/players styles
div.creature_select {
    position: fixed;
    top: 15%;
    bottom: 15%;
    left: 25%;
    right: 25%;
    @include popup_box
}
div.creature_select_viewing_box {
    position: absolute;
    top: 15px;
    left: 15px;
    right: 15px;
    bottom: 70px;
    overflow: auto;
}
div.creature_select_controls {
    position: absolute;
    height: 50px;
    left: 15px;
    right: 15px;
    bottom: 15px;
}
ul.creature_select_list {
    padding-right: 1%;
}
ul.creature_select_list li {
    margin-bottom: 5px;
}
ul.creature_select_list .creature_name {
    display: inline-block;
    height: 40px;
    line-height: 40px;
    font-size: 1.5em;
    width: 84%;
    @include dark_round_button_left;
    vertical-align: top;
}
ul.creature_select_list .creature_quality {
    width: 15%;
    display: inline-block;
    height: 40px;
    @include dark_round_button_right;
}
ul.creature_select_list input {
    width: 70%;
    height: 30px;
    margin-top: 5px;
    @include inset_input;
    font-size: 1.5em;
    text-align: center;
}
a.add_creatures_button {
    display: inline-block;
    height: 50px;
    width: 45%;
    line-height: 50px;
    font-size: 2em;
    @include dark_round_button;
}
a.hide_add_creatures_button {
    display: inline-block;
    height: 50px;
    width: 45%;
    line-height: 50px;
    font-size: 2em;
    @include dark_round_button;
}

//Add damage styles
div#add_damage_box {
    position: fixed;
    top: 40%;
    bottom: 40%;
    left: 33%;
    right: 33%;
    @include popup_box
}
div#adding_damage_to {
    margin-top: 10px;
    padding: 5px;
    text-align: center;
}
div#adding_damage_controls {
    position: absolute;
    bottom: 15px;
    left: 0px;
    right: 0px;
    text-align: center;
}
a.add_damage_button {
    display: inline-block;
    height: 30px;
    line-height: 30px;
    width: 25%;
    vertical-align: middle;
    @include dark_round_button;
}
div#adding_damage_controls input {
    width: 40%;
    height: 30px;
    font-size: 1.5em;
    @include inset_input;
    vertical-align: middle;
    text-align: center;
}

//Initiative list styles
li.creature_block {
    position: relative;
    left: -20px;
    width: 93%;
    margin-top: 3px;
    @include dark_round_button_right;
    border-left: 11px solid #FFF;
    color: #BBB;
}
li.creature_block table {
    position: relative;
    left: 5%;
    width: 95%;
    padding: 2px;
}
td.creature_block_full_name {
    text-align: left;
    font-weight: bold;
    padding-left: 5px;
    cursor: pointer;
}
td.creature_block_full_name .highlight {
    font-weight: normal;
    font-size: 0.9em;
}
div.creature_block_descriptor {
    display: inline-block;
    font-weight: bold;
    text-decoration: underline;
}
div.creature_block_name {
    display: inline-block;
}
td.creature_block_hp {
    border: 1px dashed #CCC;
    font-size: 1.2em;
    font-weight: bold;
    width: 15%;
    cursor: pointer;
}
td.temp_creature_hp {
    color: #0F0;
}
td.hurt_creature_hp {
    color: #F00;
}
td.dead_creature_hp {
    color: #000;
}
td.creature_block_defense {
    font-size: 0.8em;
    width: 20%;
    text-align: left;
    padding-left: 5px;
}
li.active_creature_block {
    position: relative;
    left: -1px;
    border-top: 1px solid #FFF;
    border-right: 1px solid #FFF;
    border-bottom: 1px solid #FFF;
}

//Selected monster styles
div#selected_monster {
    text-align: center;
}
div#selected_monster_full_name {
    font-size: 2em;
    font-weight: bold;
    color: #222;
    text-shadow: 0px 1px 1px #555;
    text-align: center;
}
.edit_monster_descriptor input {
    font-size: 0.8em;
    margin-top: 5px;
    margin-bottom: 10px;
    margin-left: 10px;
    @include inset_input;
    text-align: center;
}
textarea#notes {
    width: 80%;
    margin-left: auto;
    margin-right: auto;
    @include inset_input;
    padding: 5px;
    margin-bottom: 10px;
}
table#selected_monster_attacks {
    margin-top: 5px;
    margin-bottom: 15px;
    margin-left: auto;
    margin-right: auto;
    padding: 5px;
    border: 1px dashed #999;
}
table#selected_monster_attacks a {
    display: inline-block;
    padding: 10px 15px;
    line-height: 30px;
    font-size: 1.5em;
    @include dark_round_button;
}
td.attack_name {
    font-size: 1.5em;
    font-weight: bold;
    color: #222;
    text-shadow: 0px 1px 1px #555;
    text-align: right;
}
img.stat_block {
    display: block;
    margin-left: auto;
    margin-right: auto;
}