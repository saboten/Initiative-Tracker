@import "rounded";

// Index page styles
ul.battle_list {
    width: 80%;
    margin-left: auto;
    margin-right: auto;
}
ul.battle_list li {
    margin-bottom: 15px;
}
ul.battle_list a {
    display: block;
    height: 50px;
    line-height: 50px;
    font-size: 2em;
    @include dark_round_button;
}

//Battle layout styles
div#left_column {
    position: fixed;
    top: 0px;
    bottom: 0px;
    left: 0px;
    width: 35%;
    background-color: rgba(30,30,30,0.7);
    overflow: auto;  
}
div#center_column {
    position: fixed;
    top: 0px;
    bottom: 0px;
    left: 35%;
    width: 55%;
    box-shadow: -5px 0px 4px #111;
    overflow: auto;
}
div#right_column {
    position: fixed;
    top: 0px;
    bottom: 0px;
    left: 90%;
    width: 10%;
}
div.editable_battle_name {
    font-size: 3em;
    font-weight: bold;
    color: #222;
    text-shadow: 0px 1px 1px #555;
    text-align: center;
}
ul#battle_controls {
    text-align: center;
}
ul#battle_controls li {
    display: inline-block;
    text-align: center;
}
ul#battle_controls a {
    display: block;
    padding: 5px 10px;
    @include dark_round_button;
}

//Dice styles
div#dice_controls {
    margin-top: 15px;
    margin-bottom: 15px;
    width: 95%;
    margin-left: auto;
    margin-right: auto;
}
div#dice_controls input {
    width: 60%;
    height: 30px;
    margin-top: 5px;
    background: rgba(0, 0, 0, 0.2);
    color: #FFF;
    box-shadow: inset 0 2px 3px rgba(0, 0, 0, 0.1);
    border: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 5px;
    vertical-align: middle;
}
a.dice_button {
    display: inline-block;
    height: 30px;
    width: 18%;
    line-height: 30px;
    vertical-align: middle;
    @include dark_round_button;
}
div#roll_container {
    position: absolute;
    top: 10px;
    bottom: 10px;
    right: 10px;
    left: 10px;
    background: rgba(0, 0, 0, 0.2);
    color: #FFF;
    box-shadow: inset 0 2px 3px rgba(0, 0, 0, 0.1);
    border: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 5px;
}
ul#rolls {
    text-align: center;
}
ul#rolls li {
    font-size: 3em;
    font-weight: bold;
}

//Add monsters styles
div#monster_select {
    position: fixed;
    top: 15%;
    bottom: 15%;
    left: 25%;
    right: 25%;
    background-image: url(<%= asset_path 'bg.png' %>);
    box-shadow: 3px 3px 3px #222;
    border: 1px solid #000;
}
div#monster_select_viewing_box {
    position: absolute;
    top: 15px;
    left: 15px;
    right: 15px;
    bottom: 70px;
    overflow: auto;
}
div#monster_select_controls {
    position: absolute;
    height: 50px;
    left: 15px;
    right: 15px;
    bottom: 15px;
}
ul#monster_select_list {
    padding-right: 1%;
}
ul#monster_select_list li {
    margin-bottom: 5px;
}
ul#monster_select_list .ui-selected {
    background-color: rgba(30,30,30,0.8);  
}
ul#monster_select_list .monster_name {
    display: inline-block;
    height: 40px;
    line-height: 40px;
    font-size: 1.5em;
    width: 84%;
    @include dark_round_button_left;
    vertical-align: top;
}
ul#monster_select_list .monster_quantity {
    width: 15%;
    display: inline-block;
    height: 40px;
    @include dark_round_button_right;
}
ul#monster_select_list input {
    width: 70%;
    height: 30px;
    margin-top: 5px;
    background: rgba(0, 0, 0, 0.2);
    color: #FFF;
    box-shadow: inset 0 2px 3px rgba(0, 0, 0, 0.1);
    border: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 5px;
    text-align: center;
}
a#add_monsters_button {
    display: inline-block;
    height: 50px;
    width: 45%;
    line-height: 50px;
    font-size: 2em;
    @include dark_round_button;
}

//Initiative list styles
li.creature_block {
    position: relative;
    left: -20px;
    width: 93%;
    margin-top: 3px;
    @include dark_round_button_right;
    border-left: 11px solid #FFF;
    color: #BBB;
}
li.creature_block table {
    position: relative;
    left: 5%;
    width: 95%;
    padding: 2px;
}
td.creature_block_full_name {
    text-align: left;
    font-size: 0.9em;
    padding-left: 5px;
}
div.creature_block_descriptor {
    display: inline-block;
    font-weight: bold;
    text-decoration: underline;
}
div.creature_block_name {
    display: inline-block;
}
td.creature_block_hp {
    border: 1px dashed #CCC;
    font-size: 1.2em;
    font-weight: bold;
    width: 15%;
    cursor: pointer;
}
td.creature_block_defense {
    font-size: 0.8em;
    width: 20%;
    text-align: left;
    padding-left: 5px;
}
li.active_creature_block {
    position: relative;
    left: -1px;
}
li.selected_creature_block {
    border-top: 1px solid #FFF;
    border-right: 1px solid #FFF;
    border-bottom: 1px solid #FFF;
}

//Selected monster styles
div#selected_monster_full_name {
    font-size: 2em;
    font-weight: bold;
    color: #222;
    text-shadow: 0px 1px 1px #555;
    text-align: center;
}
table#selected_monster_attacks {
    margin-top: 5px;
    margin-bottom: 15px;
    margin-left: auto;
    margin-right: auto;
    padding: 5px;
    border: 1px dashed #999;
}
table#selected_monster_attacks a {
    display: inline-block;
    padding: 10px 15px;
    line-height: 30px;
    font-size: 1.5em;
    @include dark_round_button;
}
td.attack_name {
    font-size: 1.5em;
    font-weight: bold;
    color: #222;
    text-shadow: 0px 1px 1px #555;
    text-align: right;
}
img.stat_block {
    display: block;
    margin-left: auto;
    margin-right: auto;
}