@import "mixins";
@mixin popup_box {
    background-image: url(<%= asset_path 'bg.png' %>);
    box-shadow: 3px 3px 3px #222;
    border: 1px solid #000;
}
form.edit_form {
	margin-left: auto;
	margin-right: auto;
	width: 75%;
}
form.edit_form td {
    text-align: right;
    padding: 5px;
}
form.edit_form label.creature_label {
    font-size: 1.5em;
    color: #222;
    margin-right: 5px;
    font-weight: bold;
}
form.edit_form label.attack_label {
    font-size: 1.5em;
    color: #FFF;
    margin-right: 5px;
    font-weight: bold;
}
td#file_input_cell {
    padding: 20px;
    text-align: center;
}
form.edit_form input.dark_input {
    font-size: 1.5em;
    padding-left: 5px;
    @include inset_input;
}
form.edit_form input.dark_centered_input {
    font-size: 1.5em;
    text-align: center;
    @include inset_input;
}
input#save_button {
    width: 100%;
}
div#error_explanation {
    margin-bottom: 20px;
    color: #FFF;
    text-align: center;
    border: 1px dotted #FFF;
    padding: 10px;
}
div#error_explanation h2 {
    margin-top: 0px;
}
table.attack_table {
    padding: 10px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 10px;
    background-color: rgba(30,30,30,0.7);
    vertical-align: top;
    @include rounded;
}
a#new_attack_button {
    display: block;
    height: 40px;
    color: #FFF;
    font-weight: bold;
    font-size: 2em;
    text-decoration: none;
    text-align: center;
    background-color: rgba(30,30,30,0.7);
    margin-top: 10px;
    @include rounded;
}