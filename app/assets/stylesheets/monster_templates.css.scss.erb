@import "mixins";
@mixin popup_box {
    background-image: url(<%= asset_path 'bg.png' %>);
    box-shadow: 3px 3px 3px #222;
    border: 1px solid #000;
}
a.new_creature_button {
    position: absolute;
    right: 0px;
    width: 100px;
    @include dark_round_button;
}
ul.creature_list {
    width: 80%;
    margin-left: auto;
    margin-right: auto;
}
ul.creature_list li {
    margin-bottom: 15px;
}
ul.creature_list a {
    display: inline-block;
    text-align: center;
    height: 50px;
    line-height: 50px;
    font-size: 2em;
    vertical-align: top;
}
ul.creature_list a.edit_link {
    width: 90%;
    @include dark_round_button_left;
}
ul.creature_list a.delete_link {
    width: 9%;
    font-weight: bold;
    font-size: 3em;
    @include dark_round_button_right;
}
ul.creature_list div.creature_template_details {
    width: 98%;
    padding: 5px;
    margin-top: 3px;
    @include dark_round_button;
}
div#stat_block_preview {
    text-align: center;
}
div.creature_data_preview {
    display: inline-block;
    vertical-align: top;
    margin-left: 10px;
}